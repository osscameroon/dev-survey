  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.8.0/chart.min.js"></script>
  <script>
    new Chart(document.getElementById("polar-chart"), {
    type: 'polarArea',
    data: {
      labels: [
      "Django", "Reactjs", "VueJs", 
      "Express", "AngularJs", "Flask",
       "FastAPI", "Spring", "Odoo",
        "Laravel"
        ],
      datasets: [
        {
          label: "Devs preferred frameworks",
          backgroundColor: ["#3e95cd", "#8e5ea2","#3cba9f","#e8c3b9","#c45850"],
          data: [
          {{{ findingFramework 'django'}}},
          {{{ findingFramework 'react.js'}}},
          {{{ findingFramework 'vue.js'}}},
          {{{ findingFramework 'express'}}},
          {{{sum (findingFramework 'angular') (findingFramework 'angular.js')}}},
          {{{findingFramework 'flask'}}},
          {{{findingFramework 'fastapi'}}},
          {{{findingFramework 'spring'}}},
          {{{findingFramework 'odoo'}}},
          {{{findingFramework 'laravel'}}}
          ],
        }
      ]
    },
    plugins: {
      legend: {
        text: "hello",
        display: true,
        position: "right",
        fontSize: "20px",
          labels: {
            color: 'rgb(255, 99, 132)'
                }
            }
          },
    options: {
      title: {
        display: true,
        text: 'Predicted world population (millions) in 2050'
      }
    }
});
  </script>
